<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <solid android:color="#388E3C"/>
            <stroke android:color="#c5f9ed"
                    android:width="3dp"/>
            <corners android:radius="55dp"/>
            <padding android:bottom="8pt"
                     android:left="8dp"
                     android:right="8dp"
                     android:top="8dp"
                />

        </shape>

    </item>

    <item>
        <shape>
            <gradient android:startColor="#c5f9ed"
                      android:endColor="#8BC34A"/>
            <stroke android:color="#53933f"
                    android:width="2dp"/>
            <corners android:radius="8dp"/>
            <padding  android:bottom="3pt"
                      android:left="3dp"
                      android:right="3dp"
                      android:top="6dp"
            />

        </shape>

    </item>



</selector>